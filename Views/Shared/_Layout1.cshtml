<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlogIt</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons|Material+Icons+Outlined">
    @* <link rel="stylesheet" href="~/css/site.css" /> *@
    <link rel="stylesheet" href="~/css/base.css" />
</head>
<body>

    @if (IsSectionDefined("Navbar")) {
        @RenderSection("Navbar", required: false);
        <header>
            <nav style="z-index: 999;" id="navbar" class="navbar navbar-expand-md font-jost navbar-toggleable-md navbar-dark bg-dark fixed-top mb-3">
                <div class="container">
                    <!-- <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">BlogIt</a> -->
                    <button class="navbar-toggler text-light" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon text-light"></span>
                    </button>
                    <div style="transform: translateX(12.5%);" class="navbar-collapse justify-content-center collapse d-md-inline-flex flex-md-row-reverse">
                        <ul class="navbar-nav text-light justify-content-center flex-grow-1">
                            <li class="nav-item me-5">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item me-5 active">
                                <a class="nav-link text-light" asp-area="" asp-controller="Blog" asp-action="Explore">Blogs</a>
                            </li>
                            <li class="nav-item me-5">
                                <a class="nav-link text-light" asp-area="" asp-controller="User" asp-action="Logout">Logout</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    }

    @RenderBody()

    <!-- <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - BlogIt - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> -->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
