@{
    ViewData["Title"] = "Login Page";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="bg-seperator-right min-vh-100">
        <div style="transform: translate(-25%, -50%); top: 50%;" class="position-absolute w-form top-50 start-25 container">
            <form method="POST" class="form p-3 br-10 p-lg-5 container bg-light">
                @Html.AntiForgeryToken()
                <div style="flex-direction: row-reverse; cursor: pointer;" class="mb-3 d-flex align-items-center text-secondary" onclick="window.location.href='/User/Register'">
                    <i class="material-icons mx-3">&#xe5c8;</i>
                    REGISTER
                </div>
                <img src="~/images/logo-light.png" width="250" class="d-block mx-auto" />
                <p id="err-holder" style="font-size: 14px;" class="text-center px-5 my-2 text-danger"></p>
                <div class="mt-3">
                    <!-- <p class="mb-1">Email</p> -->
                    <input type="email" name="email" class="form-control" placeholder="Email" required />
                </div>
                <div class="mt-3">
                    <!-- <p class="mb-1">Password</p> -->
                    <input type="password" name="password" class="form-control" placeholder="Password" />
                </div>
                <div class="mt-5 text-end w-75 mx-auto">
                    <button type="submit" class="btn btn-orange px-4 br-50">Login</button>
                </div>
            </form>
        </div>
</div>

<script>
    window.onload = function () {
        let errHolder = document.getElementById("err-holder");
        if (document.URL.includes("err=email")) {
            errHolder.textContent = "No user with this email found.";
        } else if (document.URL.includes("err=password")) {
            errHolder.textContent = "The password supplied is incorrect.";
        }
    }
</script>