@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}


<form id="uploader-form" class="font-jost" method="POST" action="/blog/uploadImage" enctype="multipart/form-data">
    <input name="blogImage" class="form-control" type="file" accept="image/png" required />
    <input id="ticks" class="d-none" name="ticks" value="@ViewBag.ticks" type="text" required />
    <input type="button" class="btn btn-orange br-50 px-4 me-5 float-end my-3" onclick="formSubmitter()" value="Upload" />
</form>

<script>
    function formSubmitter() {
        document.getElementById("uploader-form").submit();
    }
</script>